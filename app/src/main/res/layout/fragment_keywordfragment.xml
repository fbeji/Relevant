<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:background="#FFFFFF"
  tools:context=".controller.KeywordFragment">


  <android.support.v7.widget.RecyclerView
    android:id="@+id/keyword_view"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="4dp"
    android:background="@android:drawable/screen_background_light"
    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/keysearchbutton" />

  <Button
    android:id="@+id/keysearchbutton"
      android:layout_width="250dp"
    android:layout_height="wrap_content"
      android:text=" Enter   "
    app:layout_constraintLeft_toRightOf="@+id/keysearchview"

      tools:layout_editor_absoluteY="16dp" />

  <EditText
    android:id="@+id/keysearchview"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
      android:textSize="30dp"
      android:textStyle="bold"
    />


</android.support.constraint.ConstraintLayout>